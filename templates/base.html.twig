<!DOCTYPE html>
<html>
    <head>

        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="https://bootswatch.com/4/lux/bootstrap.min.css">
            <link rel="stylesheet" type="text/css" href="{{ asset('stars.css') }}">
            <style>
                /* body{
                    background-image : url("./bg.jpg");
                }*/
            </style>
        {% endblock %}
            <script src="https://kit.fontawesome.com/ec73f164d2.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    </head>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="#">MEETWE <i class="far fa-handshake"></i></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/index">Conferences</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/index/topten/0">TOP 10</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('conference_norated', {slug:0 }) }}">Les non notées</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('conference_rate', {slug:0 }) }}">Les notées</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item active">
                            <a class="nav-link" href="/logout">Déconnexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item active">
                            <a class="nav-link" href="/login">Connexion</a>
                          </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/register">Inscription</a>
                        </li>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                       <!-- <li class="nav-item active">
                            <a class="nav-link btn btn-success" href="/admin">Admin</a>
                        </li>-->
                        <a class="nav-link" href="{{ path('user_index') }}">Utilisateur</a>
                    {% endif %}
                    <form class="form-inline" method="get" action="{{ path('conference_search', {slug: 0}) }}">
                        <input class="form-control" type="text" name="text" placeholder="Rechercher une conférence">
                        <button type="submit"><i class="fas fa-search fa-2x"></i></button>
                    </form>
                </ul>
            </div>
        </nav>
    </header>
    <body>
        {% block body %}{% endblock %}
        {% block footer %}{% endblock %}
        {% block javascript %}{% endblock %}
    </body>
</html>
